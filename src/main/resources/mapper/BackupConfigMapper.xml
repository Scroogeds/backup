<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.leateck.gmp.backup.core.mapper.BackupConfigMapper">

    <resultMap id="backupConfigResultMap" type="com.leateck.gmp.backup.core.entity.BackupConfig">
        <id column="code" jdbcType="CHAR" property="code" />
        <result column="row_id" jdbcType="CHAR" property="rowId" />
        <result column="create_date" jdbcType="CHAR" property="createDate" />
        <result column="update_date" jdbcType="CHAR" property="updateDate" />
        <result column="describe" jdbcType="VARCHAR" property="describe" />
        <result column="cron_expr" jdbcType="VARCHAR" property="cronExpr" />
        <!--<result column="cron_type" jdbcType="CHAR" property="cronType" />-->
        <result column="enable" jdbcType="CHAR" property="enable" />
        <!--<result column="shell_commands" jdbcType="VARCHAR" property="shellCommands" />
        <result column="backup_paths" jdbcType="VARCHAR" property="backupPaths" />-->
    </resultMap>

    <select id="queryAll" resultMap="backupConfigResultMap">
        select * from backup_config order by create_date desc
    </select>

    <select id="queryEnable" parameterType="string" resultMap="backupConfigResultMap">
        select * from backup_config where enable = #{enable} order by create_date desc
    </select>

    <update id="modifyBackupConfigEnable">
        update backup_config
        set enable = #{enable}
        where code = #{code}
    </update>

    <!--<select id="queryJavaCron" parameterType="string" resultMap="backupConfigResultMap">
        select * from backup_config where cron_type = #{cronType} order by create_date desc
    </select>-->

    <select id="queryByPage" resultMap="backupConfigResultMap">
        select * from backup_config order by create_date desc
    </select>

    <select id="queryByCode" parameterType="string" resultMap="backupConfigResultMap">
        select * from backup_config where code = #{code}
    </select>

    <insert id="insertBackupConfig" parameterType="com.leateck.gmp.backup.core.entity.BackupConfig">
        insert into backup_config(code, row_id, create_date, `describe`, cron_expr, enable)
            values(
                #{backupConfig.code},
                #{backupConfig.rowId},
                #{backupConfig.createDate},
                #{backupConfig.describe},
                #{backupConfig.cronExpr},
                #{backupConfig.enable}
            )
    </insert>

    <update id="modifyBackupConfigByCode" parameterType="com.leateck.gmp.backup.core.entity.BackupConfig">
        update backup_config
        <trim prefix="set" suffixOverrides=",">
            <if test="backupConfig.describe!=null">`describe` = #{backupConfig.describe},</if>
            <if test="backupConfig.cronExpr!=null">cron_expr = #{backupConfig.cronExpr},</if>
            <if test="backupConfig.updateDate!=null">update_date = #{backupConfig.updateDate},</if>
            <if test="backupConfig.enable!=null">enable = #{backupConfig.enable},</if>
        </trim>
        where code = #{backupConfig.code}
    </update>

    <delete id="deleteByCode" parameterType="string">
        delete from backup_config where code = #{code}
    </delete>

</mapper>
